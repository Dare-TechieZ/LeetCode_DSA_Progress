class Solution {
public:
    void twoSum(vector<int>& nums, int start, vector<vector<int>>& result, int target) {
        //Two pointer technique (Sorted array) Things you must not forget in interviews
        
        int i = start, j = nums.size()-1;
        while(i < j) {
            if(nums[i]+nums[j] > target)
                j--;
            else if(nums[i] + nums[j] < target)
                i++;
            else {
                result.push_back({-target, nums[i], nums[j]});
                while(i < j && nums[i] == nums[i+1]) i++;
                while(i < j && nums[j] == nums[j-1]) j--;
                i++; //Things you must not forget in interviews
                j--; //Things you must not forget in interviews
            }
        }
    }
    vector<vector<int>> threeSum(vector<int>& nums) {
        if(nums.size() < 3) //Things you must not forget in interviews
            return {};
        vector<vector<int>> result;
        sort(nums.begin(), nums.end());//sorting
        for(int i = 0; i<=nums.size()-3; i++) {  //(i<nums.size()-2)Things you must not forget in interviews
            if(i!=0 and nums[i] == nums[i-1]) { //Things you must not forget in interviews
                continue;//NOTE: ith index apne piche wale ke brabr na ho
            }
            twoSum(nums, i+1, result, -nums[i]);
        }
        return result;
    }
};
